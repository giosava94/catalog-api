{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cmdb-config-schema.json",
  "title": "CMDB Population Script's Configuration",
  "description": "Configuration file with manual information about CMDB providers",
  "fileMatch": "*.config.yaml",
  "type": "object",
  "properties": {
    "cmdb": {
      "description": "CMDB instance details",
      "type": "object",
      "properties": {
        "base_url": {
          "description": "CMDB base URL",
          "type": "string",
          "format": "uri"
        },
        "api_ver": {
          "description": "API versions",
          "type": "object",
          "properties": {
            "flavors": {
              "description": "Flavors API endpoint version to use",
              "type": "string",
              "default": "v1"
            },
            "identity_providers": {
              "description": "Identity providers API endpoint version to use",
              "type": "string",
              "default": "v1"
            },
            "images": {
              "description": "Images API endpoint version to use",
              "type": "string",
              "default": "v1"
            },
            "locations": {
              "description": "Locations API endpoint version to use",
              "type": "string",
              "default": "v1"
            },
            "projects": {
              "description": "Projects API endpoint version to use",
              "type": "string",
              "default": "v1"
            },
            "providers": {
              "description": "Providers API endpoint version to use",
              "type": "string",
              "default": "v1"
            },
            "quotas": {
              "description": "Quotas API endpoint version to use",
              "type": "string",
              "default": "v1"
            },
            "services": {
              "description": "Services API endpoint version to use",
              "type": "string",
              "default": "v1"
            },
            "slas": {
              "description": "SLAs API endpoint version to use",
              "type": "string",
              "default": "v1"
            },
            "user_groups": {
              "description": "User groups API endpoint version to use",
              "type": "string",
              "default": "v1"
            }
          }
        }
      },
      "required": ["base_url"]
    },
    "oidc_agent_accounts": {
      "description": "List of identity providers URLs available for OIDC-agent authentication",
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "openstack": {
      "description": "List of Openstack instances to integrate in the CMDB",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "description": "Provider name",
            "type": "string"
          },
          "status": {
            "description": "Provider status",
            "type": "string",
            "enum": ["active", "maintenance", "removed"],
            "default": "active"
          },
          "auth_url": {
            "description": "Provider authentication url",
            "type": "string",
            "format": "uri"
          },
          "identity_providers": {
            "description": "List of identity providers supported by this provider",
            "type": "array",
            "items": {
              "description": "Identity provider details",
              "type": "object",
              "properties": {
                "endpoint": {
                  "description": "Identity provider URL",
                  "type": "string",
                  "format": "uri"
                },
                "name": {
                  "description": "Identity provider name used by this provider to communicate",
                  "type": "string"
                },
                "protocol": {
                  "description": "Protocol used by this provider to communicate",
                  "type": "string"
                },
                "group_claim": {
                  "description": "Group claim to use to check user's group",
                  "type": "string"
                }
              },
              "required": ["name", "protocol", "endpoint", "group_claim"]
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "slas": {
            "description": "List of SLAs to integrate in the CMDB and to use to pair projects with user groups",
            "type": "array",
            "items": {
              "description": "SLA details",
              "type": "object",
              "properties": {
                "doc_uuid": {
                  "description": "SLA document UUID",
                  "type": "string",
                  "format": "uuid"
                },
                "project": {
                  "description": "Project details",
                  "type": "object",
                  "properties": {
                    "group": {
                      "description": "Identity providers group who have access to this project",
                      "type": "object",
                      "properties": {
                        "name": {
                          "description": "User group name",
                          "type": "string"
                        },
                        "idp": {
                          "description": "User group identity provider URL",
                          "type": "string",
                          "format": "uri"
                        }
                      },
                      "required": ["name", "idp"]
                    },
                    "per_user_limits": {
                      "description": "Resource limitations to apply to each user belonging to this project",
                      "type": "object",
                      "properties": {
                        "compute": {
                          "description": "Compute per user quotas",
                          "type": "object",
                          "properties": {
                            "cores": {
                              "description": "Max num of CPUs",
                              "type": "number"
                            },
                            "fixed_ips": {
                              "description": "Max num of assignable fixed IPs",
                              "type": "number"
                            },
                            "public_ips": {
                              "description": "Max num of assignable public IPs",
                              "type": "number"
                            },
                            "instances": {
                              "description": "Max num of VM instances",
                              "type": "number"
                            },
                            "ram": {
                              "description": "Max usable RAM in MB",
                              "type": "number"
                            }
                          }
                        },
                        "block_storage": {
                          "description": "Block storage per user quotas",
                          "type": "object",
                          "properties": {
                            "gigabytes": {
                              "description": "Disk size in gigabytes",
                              "type": "number"
                            },
                            "per_volumes_gigabytes": {
                              "description": "Max size in gigabytes for each volume",
                              "type": "number"
                            },
                            "volumes": {
                              "description": "Max num of volumes",
                              "type": "number"
                            }
                          }
                        }
                      }
                    }
                  },
                  "required": ["group"],
                  "oneOf": [
                    {
                      "properties": {
                        "id": {
                          "description": "Project UUID",
                          "type": "string",
                          "format": "uuid"
                        }
                      },
                      "required": ["id"]
                    },
                    {
                      "properties": {
                        "name": {
                          "description": "Project name",
                          "type": "string"
                        },
                        "domain": {
                          "description": "Project domain",
                          "type": "string",
                          "default": "default"
                        },
                        "region": {
                          "description": "Project domain",
                          "type": "string",
                          "default": "default"
                        }
                      },
                      "required": ["name"]
                    }
                  ]
                }
              },
              "required": ["doc_uuid", "project"]
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "is_public": {
            "description": "Provider is public",
            "type": "boolean",
            "default": false
          },
          "support_emails": {
            "description": "List of support emails for this provider",
            "type": "array",
            "items": {
              "type": "string",
              "format": "email"
            },
            "minItems": 1,
            "uniqueItems": true
          },
          "location": {
            "description": "Provider geographical location",
            "type": "object",
            "properties": {
              "site": {
                "description": "Location site name",
                "type": "string"
              },
              "country": {
                "description": "Location country extended name",
                "type": "string"
              },
              "latitude": {
                "description": "Location latitude",
                "type": "number",
                "minimum": -90,
                "maximum": 90
              },
              "longitude": {
                "description": "Location longitude",
                "type": "number",
                "minimum": -180,
                "maximum": 180
              }
            },
            "required": ["site", "country"]
          }
        },
        "required": ["name", "auth_url", "identity_providers", "slas"]
      },
      "minItems": 1,
      "uniqueItems": true
    }
  },
  "required": ["cmdb", "oidc_agent_accounts"]
}
